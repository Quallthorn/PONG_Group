<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pong_group">

    <application
        android:name=".controller.App"
        android:fullBackupOnly="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PONG_Group"
        android:allowBackup="true">
        <activity
            android:name=".controller.Settings"
            android:exported="false" />
        <activity
            android:name=".controller.NameInputActivity"
            android:exported="false" />
        <activity
            android:name=".controller.HighScore"
            android:exported="false" />
        <activity
            android:name=".controller.GamePong"
            android:exported="false" />
        <activity
            android:name=".controller.GameBreakout"
            android:exported="false" />
        <activity
            android:name=".controller.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>